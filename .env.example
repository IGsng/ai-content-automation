# ========================================
# LLM Configuration
# ========================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen2.5:32b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# ========================================
# Video Generation API
# ========================================
# Providers: replicate, fal, local, runpod
VIDEO_API_PROVIDER=replicate

# Replicate (рекомендуется для начала)
REPLICATE_API_TOKEN=r8_your_token_here
REPLICATE_MODEL=wan-ai/wan2.2:latest

# Fal.ai (быстрая альтернатива)
FAL_API_KEY=your_fal_key_here

# Local ComfyUI
COMFYUI_HOST=http://localhost:8188
COMFYUI_WORKFLOW_PATH=workflows/comfyui/video_generation.json

# ========================================
# Text-to-Speech
# ========================================
# Providers: silero, elevenlabs, yandex
TTS_PROVIDER=silero

# Silero (бесплатно, локально)
SILERO_SPEAKER=xenia
SILERO_SAMPLE_RATE=48000

# ElevenLabs (лучшее качество)
ELEVENLABS_API_KEY=your_elevenlabs_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Yandex SpeechKit
YANDEX_API_KEY=your_yandex_key
YANDEX_FOLDER_ID=your_folder_id

# ========================================
# Social Media Publishing
# ========================================
# Blotato API (все платформы)
BLOTATO_API_KEY=your_blotato_key

# Upload-Post API (альтернатива)
UPLOAD_POST_API_KEY=your_upload_post_key

# YouTube Data API v3
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REFRESH_TOKEN=your_refresh_token

# ========================================
# Publishing Settings
# ========================================
PUBLISH_TO_TIKTOK=true
PUBLISH_TO_INSTAGRAM=true
PUBLISH_TO_YOUTUBE=true

# Аккаунты (usernames)
TIKTOK_USERNAME=your_username
INSTAGRAM_USERNAME=your_username
YOUTUBE_CHANNEL_ID=your_channel_id

# ========================================
# Scheduling
# ========================================
VIDEOS_PER_DAY=3
GENERATION_HOURS=09:00,15:00,21:00
TIMEZONE=Europe/Moscow

# ========================================
# Content Settings
# ========================================
DEFAULT_DURATION=45
DEFAULT_STYLE=energetic
DEFAULT_TOPICS=космос,наука,технологии,история,психология,природа

# ========================================
# Database
# ========================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_content
REDIS_URL=redis://localhost:6379/0

# ========================================
# Monitoring
# ========================================
ENABLE_TELEMETRY=true
SENTRY_DSN=your_sentry_dsn
DASHBOARD_PORT=8080

# ========================================
# Advanced
# ========================================
DEBUG=false
LOG_LEVEL=INFO
MAX_RETRIES=3
REQUEST_TIMEOUT=300
CACHE_ENABLED=true
CACHE_TTL=3600